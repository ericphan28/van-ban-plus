<Window x:Class="AIVanBan.Desktop.Views.AlbumUploadDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Upload Album lÃªn Website"
        Width="750" Height="700"
        MinWidth="600" MinHeight="550"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="CanResize">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Header -->
            <RowDefinition Height="Auto"/>   <!-- Login Panel -->
            <RowDefinition Height="Auto"/>   <!-- User Info + Org -->
            <RowDefinition Height="*"/>      <!-- Album List -->
            <RowDefinition Height="Auto"/>   <!-- Selection Info -->
            <RowDefinition Height="Auto"/>   <!-- Progress -->
            <RowDefinition Height="Auto"/>   <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Row 0: Header -->
        <Border Grid.Row="0" Background="#1565C0" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="CloudUpload" Width="32" Height="32"
                                          Foreground="White" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Upload Album lÃªn Website" 
                               FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Äáº©y album áº£nh lÃªn website tá»• chá»©c"
                               FontSize="12" Foreground="#B3E5FC" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Row 1: Login Panel -->
        <Border Grid.Row="1" x:Name="loginPanel" Background="White" 
                Margin="15,10,15,0" Padding="20" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="ðŸ” ÄÄƒng nháº­p Website" 
                           FontSize="14" FontWeight="SemiBold" Foreground="#333" 
                           Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="URL:" VerticalAlignment="Center" 
                               FontSize="13" Foreground="#555"/>
                    <TextBox Grid.Column="1" x:Name="txtServerUrl"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="URL website (vÃ­ dá»¥: https://xagiakiem.gov.vn)"
                             FontSize="13" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="1" Text="Email:" VerticalAlignment="Center" 
                               FontSize="13" Foreground="#555"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtEmail"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             materialDesign:HintAssist.Hint="Email Ä‘Äƒng nháº­p"
                             FontSize="13" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="2" Text="Máº­t kháº©u:" VerticalAlignment="Center"
                               FontSize="13" Foreground="#555"/>
                    <PasswordBox Grid.Row="2" Grid.Column="1" x:Name="txtPassword"
                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                 materialDesign:HintAssist.Hint="Máº­t kháº©u"
                                 FontSize="13"/>
                </Grid>

                <TextBlock x:Name="txtLoginError" Text="" Foreground="#D32F2F" 
                           FontSize="12" Margin="0,10,0,0" TextWrapping="Wrap"
                           Visibility="Collapsed"/>

                <Button x:Name="btnLogin" Content="ÄÄƒng nháº­p" Margin="0,15,0,0"
                        Click="Login_Click" HorizontalAlignment="Left"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#1565C0" BorderBrush="#1565C0" Foreground="White"
                        Height="40" Padding="30,0" FontSize="14">
                </Button>
            </StackPanel>
        </Border>

        <!-- Row 2: User Info + Org Selector (hidden before login) -->
        <Border Grid.Row="2" x:Name="userInfoPanel" Visibility="Collapsed"
                Background="White" Margin="15,10,15,0" Padding="15" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel>
                <!-- User info -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <materialDesign:PackIcon Kind="AccountCircle" Width="24" Height="24"
                                              Foreground="#1565C0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtUserInfo" FontSize="13" Foreground="#333"
                               VerticalAlignment="Center" Margin="8,0,0,0"/>
                    <Button x:Name="btnLogout" Content="ÄÄƒng xuáº¥t" Margin="15,0,0,0"
                            Click="Logout_Click" FontSize="11"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="#D32F2F" Height="28"/>
                </StackPanel>

                <!-- Organization selector -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Tá»• chá»©c Ä‘Ã­ch:" VerticalAlignment="Center"
                               FontSize="13" FontWeight="SemiBold" Foreground="#555"/>
                    <ComboBox x:Name="cboOrganization" Margin="10,0,0,0"
                              MinWidth="350" FontSize="13"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              materialDesign:HintAssist.Hint="Chá»n tá»• chá»©c..."
                              SelectionChanged="Organization_SelectionChanged"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Row 3: Album List (hidden before login) -->
        <Border Grid.Row="3" x:Name="albumListPanel" Visibility="Collapsed"
                Background="White" Margin="15,10,15,0" Padding="15" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="ðŸ“ Chá»n album Ä‘á»ƒ upload (tá»‘i Ä‘a 5):" 
                           FontSize="13" FontWeight="SemiBold" Foreground="#333"
                           Margin="0,0,0,10"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="albumListContainer"/>
                </ScrollViewer>

                <!-- Empty state -->
                <TextBlock x:Name="txtNoAlbums" Grid.Row="1"
                           Text="KhÃ´ng cÃ³ album nÃ o Ä‘á»ƒ upload."
                           FontSize="13" Foreground="#999"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Row 4: Selection Info -->
        <Border Grid.Row="4" x:Name="selectionInfoPanel" Visibility="Collapsed"
                Margin="15,8,15,0" Padding="10,8">
            <TextBlock x:Name="txtSelectionInfo" FontSize="12" Foreground="#666"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Row 5: Progress -->
        <Border Grid.Row="5" x:Name="progressPanel" Visibility="Collapsed"
                Background="White" Margin="15,5,15,0" Padding="15" CornerRadius="8">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock x:Name="txtProgress" Text="Äang upload..." 
                           FontSize="12" Foreground="#333" Margin="0,0,0,8"
                           TextWrapping="Wrap"/>
                <ProgressBar x:Name="progressBar" Height="8" Minimum="0" Maximum="100"
                             Foreground="#1565C0"/>
            </StackPanel>
        </Border>

        <!-- Row 6: Action Buttons -->
        <Border Grid.Row="6" Padding="15,10,15,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCancel" Content="ÄÃ³ng" 
                        Click="Cancel_Click"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Height="40" Padding="25,0" FontSize="13" Margin="0,0,10,0"/>
                <Button x:Name="btnUpload" Content="Upload lÃªn Website"
                        Click="Upload_Click" IsEnabled="False"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#1565C0" BorderBrush="#1565C0" Foreground="White"
                        Height="40" Padding="25,0" FontSize="13">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="CloudUpload" Width="18" Height="18"
                                                          VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
