                    </Grid.RowDefinitions>

                    <!-- Summary -->
                    <materialDesign:Card Grid.Row="0" Margin="12,12,6,4" Padding="14">
                        <StackPanel>
                            <TextBlock x:Name="txtSummary" TextWrapping="Wrap" FontSize="13"/>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <Border x:Name="badgeCritical" Background="#FFEBEE" CornerRadius="12" Padding="10,4" Margin="0,0,8,0">
                                    <TextBlock x:Name="txtCriticalCount" Text="ðŸ”´ 0 NghiÃªm trá»ng" FontSize="12" Foreground="#D32F2F"/>
