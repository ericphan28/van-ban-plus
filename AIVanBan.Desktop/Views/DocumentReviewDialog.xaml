                                                      TextWrapping="Wrap" FontSize="11" Foreground="#888"
                                                      Visibility="{Binding HasReason}"/>
                                        </Grid>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <!-- SPLITTER -->
