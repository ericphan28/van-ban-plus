                               Foreground="#666"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Normal Mode Buttons -->
                    <StackPanel x:Name="normalModeButtons" Orientation="Horizontal">
                        <Button Content="âœï¸ Sá»­a album"
                                Click="EditAlbum_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,10,0"
                                Padding="10,6"/>
                        
                        <Button Content="ðŸ—‘ï¸ XÃ³a album"
                                Click="DeleteAlbum_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Foreground="Red"
                                BorderBrush="Red"
                                Margin="0,0,15,0"
                                Padding="10,6"/>
                        
                        <Button Content="ðŸ“¤ Upload áº£nh"
                                Click="Upload_Click"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#4CAF50" Foreground="White"
                                BorderBrush="#4CAF50"
                                Padding="15,6"/>
                        
                        <Button Content="ðŸ–¼ï¸ Äáº·t áº£nh bÃ¬a"
                                Click="SetCover_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="10,0,0,0"
                                Padding="10,6"/>
                        
                        <Button Content="â˜‘ï¸ Chá»n nhiá»u"
                                x:Name="btnSelectMode"
                                Click="SelectMode_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="10,0,0,0"
                                Padding="10,6"/>
                    </StackPanel>

                    <!-- Bulk Selection Mode Buttons -->
                    <StackPanel x:Name="bulkModeButtons" Orientation="Horizontal" Visibility="Collapsed">
                        <Border Background="#E3F2FD" 
                                CornerRadius="4" 
                                Padding="10,5"
                                Margin="0,0,10,0">
                            <TextBlock x:Name="txtSelectionCount" 
                                       Text="ÄÃ£ chá»n: 0 áº£nh" 
                                       FontWeight="SemiBold"
                                       Foreground="#1976D2"
                                       VerticalAlignment="Center"/>
                        </Border>

                        <Button Content="âœ… Chá»n táº¥t cáº£"
                                Click="BulkSelectAll_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,10,0"
                                Padding="10,6"/>
                        
                        <Button Content="âŒ Bá» chá»n táº¥t cáº£"
                                Click="BulkDeselectAll_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,15,0"
                                Padding="10,6"/>
                        
                        <Button Content="ðŸ—‘ï¸ XÃ³a Ä‘Ã£ chá»n"
                                x:Name="btnBulkDelete"
                                Click="BulkDelete_Click"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#F44336" Foreground="White"
                                BorderBrush="#F44336"
                                Margin="0,0,10,0"
                                Padding="10,6"/>
                        
                        <Button Content="ðŸ·ï¸ ThÃªm tags"
                                x:Name="btnBulkAddTags"
                                Click="BulkAddTags_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,10,0"
                                Padding="10,6"/>
                        
                        <Button Content="ðŸ“¤ Export"
                                x:Name="btnBulkExport"
                                Click="BulkExport_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Margin="0,0,15,0"
                                Padding="10,6"/>
                        
                        <Button Content="âŒ Há»§y"
                                Click="SelectMode_Click"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Padding="10,6"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Album Description Card -->
        <materialDesign:Card Grid.Row="1" Margin="10,0,10,10" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="MÃ´ táº£" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ScrollViewer MaxHeight="100" VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="txtDescription" 
                                   Text="KhÃ´ng cÃ³ mÃ´ táº£" 
                                   TextWrapping="Wrap"
                                   Foreground="#666"/>
                    </ScrollViewer>
                </StackPanel>

                <!-- Tags -->
                <ItemsControl x:Name="tagsPanel" Grid.Column="1" Margin="20,0,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#E3F2FD" 
                                    CornerRadius="3" 
                                    Margin="0,0,5,5">
                                <TextBlock Text="{Binding}" 
                                           FontSize="11" 
                                           Foreground="#1976D2"
                                           Margin="8,3"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </materialDesign:Card>

        <!-- Photos Grid -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="10">
            <Grid>
                <!-- Photos -->
                <ItemsControl x:Name="photosPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Width="200" Height="200" Margin="10"
                                               MouseEnter="Photo_MouseEnter"
                                               MouseLeave="Photo_MouseLeave"
                                               MouseLeftButtonDown="Photo_Select"
                                               Tag="{Binding FilePath}">
                                <materialDesign:Card.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="ðŸ‘ï¸ Xem áº£nh" Click="ViewPhoto_Click"/>
                                        <MenuItem Header="ðŸ“‚ Má»Ÿ thÆ° má»¥c" Click="OpenPhotoFolder_Click"/>
                                        <MenuItem Header="âœï¸ Äá»•i tÃªn" Click="RenamePhoto_Click"/>
                                        <MenuItem Header="ðŸ“‹ Copy Ä‘Æ°á»ng dáº«n" Click="CopyPath_Click"/>
                                        <Separator/>
                                        <MenuItem Header="ðŸ—‘ï¸ XÃ³a áº£nh" Click="DeletePhotoFromMenu_Click" Foreground="Red"/>
                                    </ContextMenu>
                                </materialDesign:Card.ContextMenu>
                                <Grid>

                                    <!-- Photo -->
                                    <Image Source="{Binding ImageSource}" 
                                           Stretch="UniformToFill"/>

                                    <!-- Selected Indicator -->
                                    <Border x:Name="selectedBorder"
                                            BorderBrush="#2196F3"
                                            BorderThickness="4"
                                            Visibility="Collapsed"/>

                                    <!-- Overlay on hover -->
                                    <Border x:Name="photoOverlay" 
                                            Background="#AA000000" 
                                            Opacity="0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=materialDesign:Card}}" Value="True">
                                                        <Setter Property="Opacity" Value="1"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Eye" 
                                                                   Width="48" 
                                                                   Height="48" 
                                                                   Foreground="White"/>
                                            <TextBlock Text="Double-click Ä‘á»ƒ xem" 
                                                       Foreground="White" 
                                                       HorizontalAlignment="Center"
                                                       FontSize="11"
                                                       Margin="0,10,0,0"/>
                                            <TextBlock Text="Right-click cho thÃªm" 
                                                       Foreground="#CCC" 
                                                       HorizontalAlignment="Center"
                                                       FontSize="9"
                                                       Margin="0,3,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty state -->
                <StackPanel x:Name="emptyState" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="Collapsed">
                    <materialDesign:PackIcon Kind="ImageOff" Width="100" Height="100" Foreground="#BDBDBD"/>
                    <TextBlock Text="Album chÆ°a cÃ³ áº£nh nÃ o" FontSize="18" Foreground="#999" Margin="0,20,0,10"/>
                    <TextBlock Text="Click 'Upload áº£nh' Ä‘á»ƒ thÃªm áº£nh vÃ o album" FontSize="14" Foreground="#BBB"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
