<Page x:Class="AIVanBan.Desktop.Views.PhotoAlbumPageNew"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Quáº£n lÃ½ Album áº£nh"
      Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="ðŸ–¼ï¸ QUáº¢N LÃ ALBUM áº¢NH" 
                       FontSize="24" FontWeight="Bold"/>
        </StackPanel>

        <!-- Toolbar -->
        <materialDesign:Card Grid.Row="1" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <TextBox x:Name="txtSearch" 
                         Grid.Column="0"
                         materialDesign:HintAssist.Hint="ðŸ” TÃ¬m kiáº¿m album..." 
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         KeyUp="Search_KeyUp"
                         materialDesign:TextFieldAssist.HasClearButton="True"/>

                <!-- Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0,0,0">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="CreateAlbum_Click" 
                            Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FolderPlus" Margin="0,0,5,0"/>
                            <TextBlock Text="Táº¡o Album"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="UploadPhotos_Click"
                            Background="#4CAF50"
                            BorderBrush="#4CAF50">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ImagePlus" Margin="0,0,5,0"/>
                            <TextBlock Text="Upload áº£nh"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Click="DownloadFromWeb_Click"
                            Background="#1565C0"
                            BorderBrush="#1565C0"
                            Margin="10,0,0,0"
                            ToolTip="Táº£i album tá»« website xÃ£ Gia Kiá»‡m (xagiakiem.gov.vn)">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CloudDownload" Margin="0,0,5,0"/>
                            <TextBlock Text="Táº£i tá»« Website"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Main Content: 3 Columns -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="350" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Column 1: Album Tree -->
            <materialDesign:Card Grid.Column="0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="ðŸ“ Albums" 
                               FontWeight="SemiBold" 
                               FontSize="14" 
                               Margin="5,5,5,15"/>

                    <TreeView x:Name="tvAlbums" 
                              Grid.Row="1"
                              SelectedItemChanged="AlbumTree_SelectionChanged">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem" BasedOn="{StaticResource {x:Type TreeViewItem}}">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <StackPanel Orientation="Horizontal" Margin="0,3">
                                    <TextBlock Text="{Binding Icon}" FontSize="16" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                                    <TextBlock Text="{Binding CountText}" 
                                               Foreground="#999" 
                                               FontSize="11" 
                                               Margin="5,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </materialDesign:Card>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Column 2: Photo Grid -->
            <materialDesign:Card Grid.Column="2" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock x:Name="txtCurrentAlbum" 
                                   Text="Táº¥t cáº£ áº£nh" 
                                   FontWeight="SemiBold" 
                                   FontSize="14"/>
                        <TextBlock x:Name="txtPhotoCount" 
                                   Text="0 áº£nh" 
                                   FontSize="12" 
                                   Foreground="#666"
                                   Margin="0,3,0,0"/>
                    </StackPanel>

                    <!-- Empty State -->
                    <StackPanel x:Name="emptyState" 
                                Grid.Row="1" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <materialDesign:PackIcon Kind="ImageOff" 
                                                Width="64" Height="64" 
                                                Foreground="#DDD"
                                                HorizontalAlignment="Center"/>
                        <TextBlock Text="ChÆ°a cÃ³ áº£nh" 
                                   FontSize="14" 
                                   Foreground="#999"
                                   Margin="0,10,0,0"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Photo Grid -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <WrapPanel x:Name="photoPanel" 
                                   Orientation="Horizontal"/>
                    </ScrollViewer>
                </Grid>
            </materialDesign:Card>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch" Background="Transparent"/>

            <!-- Column 3: Album Details -->
            <materialDesign:Card Grid.Column="4" Padding="20">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="detailPanel">
                        <TextBlock Text="CHI TIáº¾T ALBUM" 
                                   FontWeight="Bold" 
                                   FontSize="16" 
                                   Margin="0,0,0,20"/>

                        <!-- Album Info -->
                        <StackPanel x:Name="albumInfoPanel" Visibility="Collapsed">
                            <TextBlock Text="TiÃªu Ä‘á»" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtAlbumTitle" 
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     IsReadOnly="True"
                                     Margin="0,0,0,15"/>

                            <TextBlock Text="MÃ´ táº£" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                            <TextBox x:Name="txtAlbumDescription" 
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     TextWrapping="Wrap"
                                     IsReadOnly="True"
                                     MinHeight="80"
                                     AcceptsReturn="True"
                                     Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Sá»‘ áº£nh" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtDetailPhotoCount" 
                                               Text="0" 
                                               FontSize="20" 
                                               FontWeight="Bold"
                                               Foreground="#2196F3"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="NgÃ y táº¡o" FontWeight="SemiBold" FontSize="12" Foreground="#666" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="txtCreatedDate" 
                                               Text="-" 
                                               FontSize="13"/>
                                </StackPanel>
                            </Grid>

                            <Separator Margin="0,20"/>

                            <Button x:Name="btnEditAlbum"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Click="EditAlbum_Click"
                                    HorizontalAlignment="Stretch"
                                    Margin="0,10,0,5">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Pencil" Margin="0,0,5,0"/>
                                    <TextBlock Text="Sá»­a thÃ´ng tin"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="btnDeleteAlbum"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Click="DeleteAlbum_Click"
                                    HorizontalAlignment="Stretch"
                                    Foreground="#F44336"
                                    BorderBrush="#F44336">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Delete" Margin="0,0,5,0"/>
                                    <TextBlock Text="XÃ³a album"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Empty selection state -->
                        <StackPanel x:Name="emptySelectionPanel" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"
                                    Margin="0,100,0,0">
                            <materialDesign:PackIcon Kind="FolderInformation" 
                                                    Width="64" Height="64" 
                                                    Foreground="#DDD"
                                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="Chá»n album Ä‘á»ƒ xem chi tiáº¿t" 
                                       FontSize="13" 
                                       Foreground="#999"
                                       TextAlignment="Center"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Page>
