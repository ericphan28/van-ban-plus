<Window x:Class="AIVanBan.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="VanBanPlus — Gia Kiệm Số" 
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">
    
    <Window.InputBindings>
        <KeyBinding Key="F1" Command="{x:Static ApplicationCommands.Help}"/>
    </Window.InputBindings>

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static ApplicationCommands.Help}" Executed="HelpCommand_Executed"/>
    </Window.CommandBindings>

    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="8,6" 
                                      materialDesign:ElevationAssist.Elevation="Dp4">
                <DockPanel>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileDocument" Width="24" Height="24" 
                                                VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="AI VĂN BẢN HÀNH CHÍNH" FontSize="16" FontWeight="Bold" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                        <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="Kiểm tra cập nhật"
                                Click="CheckForUpdates_Click" Foreground="White">
                            <materialDesign:PackIcon Kind="Update" Width="22" Height="22"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="Cài đặt API"
                                Click="Settings_Click" Foreground="White">
                            <materialDesign:PackIcon Kind="CogOutline" Width="22" Height="22"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="Trợ giúp"
                                Click="Help_Click" Foreground="White">
                            <materialDesign:PackIcon Kind="HelpCircleOutline" Width="22" Height="22"/>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignIconButton}" ToolTip="Giới thiệu phần mềm"
                                Click="About_Click" Foreground="Yellow">
                            <materialDesign:PackIcon Kind="InformationOutline" Width="22" Height="22"/>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="sidebarColumn" Width="240"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar Navigation -->
                <Border x:Name="sidebarBorder" Grid.Column="0" Background="{DynamicResource MaterialDesignCardBackground}"
                        BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Toggle Button -->
                        <Button x:Name="btnToggleSidebar" Grid.Row="0"
                               Style="{StaticResource MaterialDesignIconButton}"
                               HorizontalAlignment="Right"
                               Margin="0,5,10,5"
                               ToolTip="Thu gọn menu"
                               Click="ToggleSidebar_Click">
                            <materialDesign:PackIcon x:Name="iconToggle" Kind="ChevronLeft" Width="20" Height="20"/>
                        </Button>
                        
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="0,2,0,0">
                                <!-- ═══════ TRANG CHỦ ═══════ -->
                                <Button x:Name="btnDashboard" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="40" HorizontalContentAlignment="Left" 
                                       Padding="12,0,0,0" Click="NavigateToDashboard"
                                       ToolTip="Trang chủ">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ViewDashboard" Width="24" Height="24" 
                                                                VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtDashboard" Text="Trang chủ" FontSize="14" Margin="15,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- ═══════ NHÓM: VĂN BẢN ═══════ -->
                                <TextBlock x:Name="txtGroupDocuments" Text="VĂN BẢN" FontSize="11" FontWeight="Bold" 
                                          Foreground="{DynamicResource PrimaryHueMidBrush}" Opacity="0.7"
                                          Margin="20,14,0,6"/>

                                <Button x:Name="btnDocuments" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="40" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="NavigateToDocuments"
                                       ToolTip="Quản lý 29 loại VB hành chính — NĐ 30/2020/NĐ-CP">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileDocument" Width="22" Height="22" 
                                                                VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtDocuments" Text="Quản lý tài liệu" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnTemplates" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="40" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="NavigateToTemplates"
                                       ToolTip="Mẫu VB chuẩn theo Phụ lục I-IV, NĐ 30/2020">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileDocumentEdit" Width="22" Height="22" 
                                                                VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtTemplates" Text="Mẫu văn bản" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnLegalRef" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="40" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="NavigateToLegalReference"
                                       ToolTip="Tra cứu NĐ 30/2020/NĐ-CP — 38 Điều, 6 Phụ lục về công tác văn thư">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ScaleBalance" Width="22" Height="22" 
                                                                VerticalAlignment="Center" Foreground="#4CAF50"/>
                                        <TextBlock x:Name="txtLegalRef" Text="Tra cứu pháp quy" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnStatistics" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="40" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="NavigateToStatistics"
                                       ToolTip="Thống kê văn bản theo kỳ, loại, hướng">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ChartBar" Width="22" Height="22" 
                                                                VerticalAlignment="Center" Foreground="#FF9800"/>
                                        <TextBlock x:Name="txtStatistics" Text="Thống kê" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- ═══════ NHÓM: CÔNG VIỆC ═══════ -->
                                <TextBlock x:Name="txtGroupWork" Text="CÔNG VIỆC" FontSize="11" FontWeight="Bold" 
                                          Foreground="{DynamicResource PrimaryHueMidBrush}" Opacity="0.7"
                                          Margin="20,14,0,6"/>

                                <Button x:Name="btnPhotos" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="40" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="NavigateToPhotos"
                                       ToolTip="Album ảnh">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ImageMultiple" Width="22" Height="22" 
                                                                VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtPhotos" Text="Album ảnh" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnMeetings" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="40" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="NavigateToMeetings"
                                       ToolTip="Lịch cuộc họp">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="CalendarClock" Width="22" Height="22" 
                                                                VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtMeetings" Text="Cuộc họp" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- ═══════ NHÓM: AI NÂNG CAO ═══════ -->
                                <TextBlock x:Name="txtGroupAI" Text="✨ AI NÂNG CAO" FontSize="11" FontWeight="Bold" 
                                          Foreground="#FF9800" Opacity="0.85"
                                          Margin="20,14,0,6"/>

                                <Button x:Name="btnAI" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="38" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="NavigateToAI"
                                       ToolTip="AI soạn thảo đúng thể thức NĐ 30/2020">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Creation" Width="20" Height="20" 
                                                                VerticalAlignment="Center" Foreground="#FF9800"/>
                                        <TextBlock x:Name="txtAI" Text="Soạn văn bản" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnAIReport" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="38" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="OpenAIReport_Click"
                                       ToolTip="AI tạo báo cáo định kỳ">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ChartBar" Width="20" Height="20" 
                                                                VerticalAlignment="Center" Foreground="#FF9800"/>
                                        <TextBlock x:Name="txtAIReport" Text="Báo cáo" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnAIScan" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="38" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="OpenAIScan_Click"
                                       ToolTip="AI đọc văn bản từ ảnh/PDF">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Scanner" Width="20" Height="20" 
                                                                VerticalAlignment="Center" Foreground="#FF9800"/>
                                        <TextBlock x:Name="txtAIScan" Text="Scan OCR" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnAIReview" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="38" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="OpenAIReview_Click"
                                       ToolTip="Kiểm tra thể thức theo Điều 8, NĐ 30/2020">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="TextSearch" Width="20" Height="20" 
                                                                VerticalAlignment="Center" Foreground="#FF9800"/>
                                        <TextBlock x:Name="txtAIReview" Text="Kiểm tra VB" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnAIAdvisory" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="38" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="OpenAIAdvisory_Click"
                                       ToolTip="AI tham mưu xử lý văn bản đến">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="LightbulbOn" Width="20" Height="20" 
                                                                VerticalAlignment="Center" Foreground="#FF9800"/>
                                        <TextBlock x:Name="txtAIAdvisory" Text="Tham mưu" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnAISummary" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="38" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="OpenAISummary_Click"
                                       ToolTip="AI tóm tắt nội dung văn bản">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="TextBoxCheck" Width="20" Height="20" 
                                                                VerticalAlignment="Center" Foreground="#FF9800"/>
                                        <TextBlock x:Name="txtAISummary" Text="Tóm tắt" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- ═══════ NHÓM: HỆ THỐNG ═══════ -->
                                <TextBlock x:Name="txtGroupSystem" Text="HỆ THỐNG" FontSize="11" FontWeight="Bold" 
                                          Foreground="{DynamicResource MaterialDesignBodyLight}" Opacity="0.6"
                                          Margin="20,14,0,6"/>

                                <Button x:Name="btnAlbumSetup" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="38" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="SetupAlbumStructure"
                                       ToolTip="Cấu hình cấu trúc Album">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FolderCog" Width="20" Height="20" 
                                                                VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtAlbumSetup" Text="Cấu hình Album" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnBackup" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="38" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="NavigateToBackup"
                                       ToolTip="Sao lưu &amp; Khôi phục">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="DatabaseExport" Width="20" Height="20" 
                                                                VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtBackup" Text="Sao lưu" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button x:Name="btnHelp" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="38" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="Help_Click"
                                       ToolTip="Hướng dẫn sử dụng">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="HelpCircleOutline" Width="20" Height="20" 
                                                                VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtHelp" Text="Trợ giúp" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- Admin Dashboard (chỉ hiện khi là admin) -->
                                <Button x:Name="btnAdmin" Style="{StaticResource MaterialDesignFlatButton}" 
                                       Height="38" HorizontalContentAlignment="Left" 
                                       Padding="20,0,0,0" Click="NavigateToAdmin"
                                       ToolTip="Admin Dashboard" Visibility="Collapsed">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ShieldAccount" Width="20" Height="20" 
                                                                VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtAdmin" Text="Admin" FontSize="13" Margin="12,0,0,0" 
                                                  VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <!-- ═══════ THỐNG KÊ ═══════ -->
                                <Separator x:Name="separatorStats" Margin="10,12"/>

                                <StackPanel x:Name="statsPanel" Margin="20,2,0,5">
                                    <TextBlock x:Name="txtTotalDocs" Text="📊 Tổng: 0 văn bản" FontSize="12" Opacity="0.7"/>
                                    <TextBlock x:Name="txtThisMonth" Text="📅 Tháng này: 0" FontSize="12" Margin="0,3,0,0" Opacity="0.7"/>
                                    <TextBlock x:Name="txtThisYear" Text="📆 Năm nay: 0" FontSize="12" Margin="0,3,0,0" Opacity="0.7"/>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Gia Kiệm Số Branding -->
                        <Border Grid.Row="2" BorderBrush="{DynamicResource MaterialDesignDivider}" 
                                BorderThickness="0,1,0,0" Padding="12,10" 
                                Background="{DynamicResource MaterialDesignToolBarBackground}">
                            <StackPanel x:Name="pnlSidebarBrand" HorizontalAlignment="Center">
                                <TextBlock Text="🏢 Gia Kiệm Số" FontSize="12" FontWeight="SemiBold"
                                          HorizontalAlignment="Center" 
                                          Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                <TextBlock x:Name="txtBrandUrl" Text="giakiemso.com" FontSize="10.5" 
                                          HorizontalAlignment="Center" Margin="0,2,0,0"
                                          Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                          Opacity="0.8" Cursor="Hand"
                                          MouseLeftButtonUp="BrandUrl_Click"
                                          TextDecorations="Underline"
                                          ToolTip="https://giakiemso.com"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <Grid Grid.Column="1">
                    <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
                    
                    <!-- Default Welcome Screen -->
                    <StackPanel x:Name="WelcomeScreen" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="FileDocument" Width="100" Height="100" 
                                                Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="Chào mừng đến AI Văn Bản Hành Chính" 
                                  FontSize="24" FontWeight="Bold" 
                                  TextAlignment="Center" Margin="0,20,0,10"/>
                        <TextBlock Text="Quản lý tài liệu thông minh với AI" 
                                  FontSize="16" 
                                  Foreground="{DynamicResource MaterialDesignBodyLight}"
                                  TextAlignment="Center"/>
                        <TextBlock Text="🏢 Sản phẩm của Công ty TNHH Gia Kiệm Số" 
                                  FontSize="12" TextAlignment="Center" Margin="0,8,0,0"
                                  Foreground="{DynamicResource MaterialDesignBodyLight}" Opacity="0.7"
                                  Cursor="Hand" MouseLeftButtonUp="BrandUrl_Click"
                                  ToolTip="https://giakiemso.com"/>
                        
                        <StackPanel Orientation="Horizontal" Margin="0,40,0,0" HorizontalAlignment="Center">
                            <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                                   Margin="10" Padding="20,10" Click="NavigateToDocuments">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Thêm tài liệu" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                                   Margin="10" Padding="20,10" Click="NavigateToAI">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Creation" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <TextBlock Text="Tạo văn bản AI" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Status Bar -->
            <Border Grid.Row="2" Background="{DynamicResource MaterialDesignToolBarBackground}" 
                    BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,1,0,0"
                    Padding="10,4">
                <DockPanel>
                    <!-- Left: API Status -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <materialDesign:PackIcon x:Name="iconApiStatus" Kind="CloudCheck" 
                                                Width="16" Height="16" VerticalAlignment="Center"
                                                Foreground="Green" Margin="0,0,5,0"/>
                        <TextBlock x:Name="txtApiMode" Text="☁️ VanBanPlus API" 
                                  FontSize="12" VerticalAlignment="Center" Opacity="0.8"/>
                        <TextBlock Text=" │ " FontSize="12" Opacity="0.4" VerticalAlignment="Center"/>
                        <materialDesign:PackIcon Kind="AccountCircle" Width="14" Height="14" 
                                                VerticalAlignment="Center" Opacity="0.6" Margin="0,0,4,0"/>
                        <TextBlock x:Name="txtStatusUser" Text="Chưa đăng nhập" 
                                  FontSize="12" VerticalAlignment="Center" Opacity="0.7"/>
                    </StackPanel>

                    <!-- Center: Branding + Version -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🏢 Gia Kiệm Số  ·  giakiemso.com" 
                                  FontSize="11" VerticalAlignment="Center" Opacity="0.6"
                                  Cursor="Hand"
                                  MouseLeftButtonUp="BrandUrl_Click"
                                  ToolTip="https://giakiemso.com"/>
                        <TextBlock Text=" │ " FontSize="11" Opacity="0.3" VerticalAlignment="Center"/>
                        <TextBlock Text="v1.0.9" FontSize="10" VerticalAlignment="Center" 
                                  Opacity="0.5" FontWeight="SemiBold"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </StackPanel>

                    <!-- Right: Usage + Login + Settings -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <TextBlock x:Name="txtUsageInfo" Text="" 
                                  FontSize="12" VerticalAlignment="Center" Opacity="0.7"/>
                        <Button x:Name="btnLoginQuick" Content="🔑 Đăng nhập" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                FontSize="11" Height="24" Padding="8,0"
                                Click="QuickLogin_Click" Margin="8,0,0,0"/>
                        <Button x:Name="btnLogout" Content="🚪 Đăng xuất" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                FontSize="11" Height="24" Padding="8,0"
                                Click="Logout_Click" Visibility="Collapsed"
                                Foreground="OrangeRed"/>
                        <TextBlock Text="│" FontSize="12" Opacity="0.3" VerticalAlignment="Center" Margin="4,0"/>
                        <Button x:Name="btnSettingsQuick" Content="⚙ Cài đặt" 
                                Style="{StaticResource MaterialDesignFlatButton}"
                                FontSize="11" Height="24" Padding="8,0"
                                Click="Settings_Click"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>
    </materialDesign:DialogHost>
</Window>
